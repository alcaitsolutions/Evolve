<Page loaded="pageLoaded" class="page"
    xmlns="http://www.nativescript.org/tns.xsd" 
    xmlns:CheckBox="nativescript-checkbox">
    <ActionBar class="action-bar customActionBar" >
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <ActionItem icon="res://navigation/menu" 
            android:visibility="collapsed" 
            tap="onDrawerButtonTap"
            ios.position="left"></ActionItem>
        <Label class="action-bar-title" text="Signup"></Label>
    </ActionBar>
    <DockLayout width="100%" height="100%" backgroundColor="lightgray" class="page-gradient"
        stretchLastChild="false">
        <Button isEnabled="{{nextButtonOn}}" id="signUpButton" class="submitButton h2 border" text="{{ showDetails ? 'Hide' : 'Next' }}" height="60" dock="bottom"
            tap="{{onSignupButtonTap}} " returnKeyType="next"/>
        <!-- content -->
        <StackLayout dock="top" width="100%" height="55" >
            <Label text="Select Your Plan" class="h3 ChooseHeader" width="100%"/>
            </StackLayout>
        <ScrollView>
            <StackLayout class="">
               
                <Image src="~/images/signup/plan-free-off.png" 
        stretch="aspectFit" 
        class="productImage"
        tap="{{onPlanFreeTap}}"
        id="diabetes"
        name="diabetes"></Image>
        <Image src="~/images/signup/plan-free-off.png" 
        stretch="aspectFit" 
        class="productImage"
        tap="{{onPlanFreeTap}}"
        id="diabetes"
        name="diabetes"></Image>  <Image src="~/images/signup/plan-free-off.png" 
        stretch="aspectFit" 
        class="productImage"
        tap="{{onPlanFreeTap}}"
        id="diabetes"
        name="diabetes"></Image>
        <StackLayout>
            I accept Terms and Conditions: <Switch checked="false" row="6" col="1"/> 
            </StackLayout>
            </StackLayout>
        </ScrollView>
        <!-- end content -->
    </DockLayout>
    
</Page>