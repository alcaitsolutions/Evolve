<Page navigatingTo="onNavigatingTo" class="page" xmlns="http://schemas.nativescript.org/tns.xsd">
 <ActionBar class="action-bar customActionBar" >
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <ActionItem icon="res://navigation/menu" 
            android:visibility="collapsed" 
            tap="onDrawerButtonTap"
            ios.position="left"></ActionItem>
        <Label class="action-bar-title" text="Signup"></Label>
    </ActionBar>

  
   
       
  
    <StackLayout >
         <Image src="~/images/signup/step1.png" 
                stretch="aspectFit" 
                class="evolve-steps p-t-20 p-l-10 p-r-10 "
                tap="action"></Image>

                 <Label  horizontalAlignment="center" text="Choose Your Course" class="headerText"></Label>

    <ScrollView >
        <StackLayout >

        <Image src="~/images/signup/price.png" 
                stretch="aspectFit" 
                class="evolve-steps p-t-20 p-l-10 p-r-10 "
                tap="action"></Image>

            <Button class="btn btn-outline" tap="onSignupWithSocialProviderButtonTap()" text="Sign up with Social Provider"></Button>

           
       
        </StackLayout>
    </ScrollView>
    </StackLayout>

  

</Page>