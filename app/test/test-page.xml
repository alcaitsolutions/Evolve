<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
    <DockLayout width="100%" height="100%" class="page-gradient" backgroundColor="lightgray"
        stretchLastChild="false">


        <Button class="btn-primary" text="CONTINUE" height="80" dock="bottom"
            tap="{{ onButtonTap }}" />
        <!-- content -->
        <StackLayout dock="top" width="100%" height="75" backgroundColor="yellow">

            <Label horizontalAlignment="center" text="Graphic - Step 1 thru 3 Here" />

        </StackLayout>
        <StackLayout verticalAlignment="center">
            <TextField  width="80%"  text="{{ textFieldValue }}" hint="First Name" />
            <TextField text="{{ textFieldValue }}" hint="Last Name" />
            <TextField text="{{ textFieldValue }}" hint="Email" />
            <TextField text="{{ textFieldValue }}" hint="Password" />
        </StackLayout>
        <!-- end content -->
    </DockLayout>
</Page>